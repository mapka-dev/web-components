{
  "extends": "@chyzwar/tsconfig/bundler.json", 
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "outDir": "build",
    "rootDir": "src",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "tsBuildInfoFile": "./build/buildInfo.json",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "react",
      "react-dom"
    ]
  },
  "include": [
    "src"
  ], 
  "references": [
    { "path": "../maplibre-map/tsconfig.json" },
    { "path": "../mapbox-map/tsconfig.json" }
  ]
}
