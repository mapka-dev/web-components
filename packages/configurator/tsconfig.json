{
  "extends": "@chyzwar/tsconfig/bundler.json",
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "tsBuildInfoFile": "./dist/buildInfo.json",
    "skipLibCheck": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src"],
  "references": [
    { "path": "../maplibre-map/tsconfig.json" },
    { "path": "../mapbox-map/tsconfig.json" },
    { "path": "../split-panel/tsconfig.json" },
    { "path": "../leaflet-map/tsconfig.json" }
  ]
}
